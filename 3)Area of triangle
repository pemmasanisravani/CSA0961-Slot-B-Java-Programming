import java.util.*;
class Triangle
{
public static void main(String arg[])
{
Scanner sc=new Scanner(System.in);
double b,h,area;
System.out.println("enter the height");
h=sc.nextDouble();
System.out.println("enter the breadth");
b=sc.nextDouble();
area=0.5*b*h;
System.out.println("area:"+area);
}
}
