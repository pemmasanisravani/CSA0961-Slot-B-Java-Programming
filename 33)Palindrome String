class Palinstr
{
public static void main(String arg[])
{
String str="malayalam";
String rev="";
char ch;
int n=str.length();
for(int i=n-1;i>=0;i--)
{
ch=str.charAt(i);
rev=rev+ch;
}
if(rev.equals(str))
{
System.out.println(str+ "it is palindrome");
}
else
{
System.out.println(str+ " it is not palindrome");
}
}
}
